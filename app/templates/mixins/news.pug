mixin news(data)
	.news(class= attributes.class)
		.col-lg-10.push-lg-1
			p.news__date= data.date

		.col-sm-6.col-lg-4.push-lg-1
			a.news__img-wrap(href= data.link)
				.news__img(style="background-image: url('" + data.img + "');")

		.col-sm-6.col-lg-6.push-lg-1.news__text
			a.news__title(href= data.link)= data.title
			p.news__desc= data.desc
