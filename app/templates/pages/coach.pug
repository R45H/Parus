include ../mixins/banner
include ../mixins/coach
include ../mixins/icon

.section.section_space_none
	.container
		h1.title Наша команда

.section
	.container
		.main__space_bot-half
			p В команде клуба собраны тренеры с уникальным опытом решения самых различных задач по поддержанию здоровья и развитию спортивных навыков взрослых и детей.

		.main__space_bot-half.text-center
			a.btn(href="#" data-modal="#modal") Заказать тренировку

.section.section_space_half
	.container
		.row

			each val in icon
				.col-6.col-lg-3.main__icon-wrap
					+icon(val)

		.row

			each val in icon_2
				.col-6.col-md-3.main__icon-wrap
					+icon(val)

.section
	.container

		.tab-lg

			.tab-lg__head.main__space_bot.hidden-xs

				- var cnt = 1;
				each val, i in global[0].addresses
					a.tab-lg__title(
						href= "#panel-" + (cnt)
						data-club= i + 1
					)
						span= val.name
					- cnt++;

			.tab-lg__body

					.row.tab-lg__panel.tab-lg__panel_hidden(id= 'panel-1')

						each val in coach
								.col-sm-6.col-md-4.col-lg-3.main__space_bot-cols
									+coach(val)

					.row.tab-lg__panel.tab-lg__panel_hidden(id= 'panel-2')

						each val in coach_2
								.col-sm-6.col-md-4.col-lg-3.main__space_bot-cols
									+coach(val)